<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.game.PreguntasActivity"
    android:background="@color/black">

    <TextView
        android:id="@+id/tvtitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/titulo_preguntas_activity"
        android:textSize="40dp"
        android:fontFamily="@font/dancing"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/gold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="22dp"/>
    <ImageView
        android:id="@+id/ivgoya"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/tvtitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:src="@drawable/goya"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cvpregunta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ivgoya"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="22dp"
        app:cardCornerRadius="22dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvpregunta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Â¿Pregunta?"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="18dp"
                android:layout_margin="12dp"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/tvrespuestaA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Respuesta A"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="14dp"
                android:layout_margin="8dp"
                app:rippleColor="@color/gold"
                app:strokeWidth="3dp"
                app:strokeColor="@color/black"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/tvrespuestaB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Respuesta B"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="14dp"
                android:layout_margin="8dp"
                app:rippleColor="@color/gold"
                app:strokeWidth="3dp"
                app:strokeColor="@color/black"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/tvrespuestaC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Respuesta C"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="14dp"
                android:layout_margin="8dp"
                app:rippleColor="@color/gold"
                app:strokeWidth="3dp"
                app:strokeColor="@color/black"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/tvrespuestaD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Respuesta D"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="14dp"
                android:layout_margin="8dp"
                app:rippleColor="@color/gold"
                app:strokeWidth="3dp"
                app:strokeColor="@color/black"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/progress_circular"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/cvpregunta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="12dp"
        app:cpb_background_progressbar_color="#b6bbd8"
        app:cpb_background_progressbar_width="3dp"
        app:cpb_progress_direction="to_right"
        app:cpb_progressbar_color="#3f51b5"
        app:cpb_progressbar_width="6dp"
        app:cpb_round_border="false"/>
    <TextView
        android:id="@+id/tvscore"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/progress_circular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="0000"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/gold"
        android:layout_marginVertical="12dp"
        android:gravity="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>