<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainActivity">

    <TextView
        android:id="@+id/tvtitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/titulo_preguntas_activity"
        android:textSize="40dp"
        android:fontFamily="@font/dancing"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/gold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="12dp"/>

    <ImageView
        android:id="@+id/ivlogo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/goya"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvtitulo"
        android:layout_marginTop="30dp"
        app:tint="@color/gold_dark" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_play"
        app:backgroundTint="@color/white"/>
    <TextView
        android:id="@+id/tvsubtitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/subtitulo_preguntas_activity"
        android:textSize="30dp"
        android:fontFamily="@font/dancing"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/gold_dark"
        app:layout_constraintTop_toBottomOf="@id/btnStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="6dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>