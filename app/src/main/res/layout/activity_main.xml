<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainActivity">

    <TextView
        android:id="@+id/tvtitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/titulo_preguntas_activity"
        android:textSize="40dp"
        android:fontFamily="@font/dancing"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="12dp"/>

    <ImageView
        android:id="@+id/ivlogo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvtitulo"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/tvsubtitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOS GOYA"
        android:textColor="@color/black"
        android:textSize="42sp"
        android:textStyle="italic"
        android:fontFamily="@font/lemonada"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivlogo"/>
    <ImageView
        android:id="@+id/ivquizz"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logoppal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvsubtitulo"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Demuestra en un minuto cuánto sabes sobre el cine español y ¡entra en el top 5 mundial!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivquizz"
        android:textSize="12sp"
        android:textStyle="italic"
        android:textAlignment="center"
        android:fontFamily="@font/lemonada"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="12dp"/>

    <Button
        android:id="@+id/btnStart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/btnEmpezar"
        android:layout_marginHorizontal="65dp"
        android:layout_marginVertical="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>